rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Profiles collection - authenticated users can read/write
    match /profiles/{profileId} {
      allow read, write: if isAuthenticated();
    }

    // Mentors collection - anyone can read/write
    match /mentors/{mentorId} {
      allow read, write: if true;
    }

    // User companion collection - authenticated users can read/write
    match /user_companion/{companionId} {
      allow read, write: if isAuthenticated();
    }

    // Companion evolutions - authenticated users can read/write
    match /companion_evolutions/{evolutionId} {
      allow read, write: if isAuthenticated();
    }

    // Companion evolution cards - authenticated users can read/write
    match /companion_evolution_cards/{cardId} {
      allow read, write: if isAuthenticated();
    }

    // Companion stories - authenticated users can read/write
    match /companion_stories/{storyId} {
      allow read, write: if isAuthenticated();
    }

    // Daily missions - authenticated users can read/write
    match /daily_missions/{missionId} {
      allow read, write: if isAuthenticated();
    }

    // Daily check-ins - authenticated users can read/write
    match /daily_check_ins/{checkInId} {
      allow read, write: if isAuthenticated();
    }

    // Daily tasks - authenticated users can read/write
    match /daily_tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // Pep talks - authenticated users can read/write
    match /pep_talks/{talkId} {
      allow read, write: if isAuthenticated();
    }

    // Daily pep talks - authenticated users can read/write
    match /daily_pep_talks/{talkId} {
      allow read, write: if isAuthenticated();
    }

    // Quotes - authenticated users can read/write
    match /quotes/{quoteId} {
      allow read, write: if isAuthenticated();
    }

    // Habits - authenticated users can read/write
    match /habits/{habitId} {
      allow read, write: if isAuthenticated();
    }

    // XP events - authenticated users can read/write
    match /xp_events/{eventId} {
      allow read, write: if isAuthenticated();
    }

    // User daily pushes - authenticated users can read/write
    match /user_daily_pushes/{pushId} {
      allow read, write: if isAuthenticated();
    }

    // Default: authenticated users can read/write everything else
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
